<Window x:Class="Transcher.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Transcher.Views"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <StackPanel Width="200" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Email" Margin="0,0,0,10"/>
            <TextBox Margin="0,0,0,10"/>
            <TextBlock Margin="0,0,0,10" Text="Wachtwoord"/>
            <PasswordBox Margin="0,0,0,10"/>
            <Button Content="Login" Width="50" Height="25" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>
