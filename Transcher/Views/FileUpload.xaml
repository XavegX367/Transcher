<Window x:Class="Transcher.Views.FileUpload"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Transcher.Views"
        mc:Ignorable="d"
        Title="FileUpload" Height="300" Width="400"
        Background="Black"
        Foreground="white">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
            <DockPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Name="tbFilePath" Width="200" Background="LightGray" Foreground="Black"/>
                <Button Name="btnOpenFile" Click="btnOpenFile_Click">Open file</Button>
            </DockPanel>

            <DockPanel Margin="10,0,10,0" VerticalAlignment="Center">
                <Button HorizontalAlignment="Left" Content="Cancel"/>
                <Button HorizontalAlignment="Right" Content="Upload" x:Name="btnUpload" Click="btnUpload_Click"/>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
